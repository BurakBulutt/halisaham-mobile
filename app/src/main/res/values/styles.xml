    <!-- Spinner stilini tanımlayın -->
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">@drawable/spinner_dropdown_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:dropDownSelector">@drawable/spinner_dropdown_selector</item>
        <item name="android:popupTheme">@style/SpinnerDropdownTheme</item>
        <item name="android:dropDownVerticalOffset">40dp</item>
    </style>

    <style name="CustomTextViewStyle">
        <item name="android:background">@drawable/custom_textview_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/roboto_regular</item> <!-- Roboto fontunu kullanmak için -->
        <item name="android:gravity">center</item>
    </style>

    <!-- Custom Dialog Theme -->
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/card_border</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@drawable/card_border</item>
    </style>
</resources>